<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:fillViewport="true" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/background_dark"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.frrahat.microhelper.MicroHelperMainActivity$PlaceholderFragment" >
		
        
    <TextView
        android:id="@+id/textView_sayBinary2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sayBinary"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#f0f" />

    <TextView
        android:id="@+id/textView_binaryValueBits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_shape_special"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/text_view_text_size" />

    <TextView
        android:id="@+id/textView_sayHex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sayHex"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/textView_hexValueString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_shape_special"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="@dimen/text_view_text_size" />
    
    <Space 
        android:layout_width="match_parent"
        android:layout_height="@dimen/spae_gap"/>

    
    
    
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="7"
        android:useDefaultMargins="true"
         >

        <TextView
            android:id="@+id/textView1"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="0"
            android:text="I/O mode"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f0f" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/holo_green_dark"
            android:popupBackground="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/textView2"
            android:layout_gravity="left"
            android:text="Grp A Mode"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f0f" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/holo_orange_dark"
            android:popupBackground="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/textView3"
            android:layout_gravity="left"
            android:text="Grp A port A"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f0f" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/holo_green_dark"
            android:popupBackground="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/textView4"
            android:layout_gravity="left"
            android:text="Grp A port Cu"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f0f" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/holo_orange_dark"
            android:popupBackground="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/textView5"
            android:layout_gravity="left"
            android:text="Grp B Mode"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f0f" />

        <Spinner
            android:id="@+id/spinner5"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/holo_green_dark"
            android:popupBackground="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/textView6"
            android:layout_gravity="left"
            android:text="Grp B port B"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f0f" />

        <Spinner
            android:id="@+id/spinner6"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/holo_orange_dark"
            android:popupBackground="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/textView7"
            android:layout_gravity="left"
            android:text="Grp B port Cl"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f0f" />

        <Spinner
            android:id="@+id/spinner7"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/holo_green_dark"
            android:popupBackground="@android:color/holo_green_light" />

    </GridLayout>
        
    </LinearLayout>

</ScrollView>
